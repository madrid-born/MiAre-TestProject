@using MiAre_TestProject.Models
@model IEnumerable<MiAre_TestProject.Models.User>

@{
    ViewBag.Title = "Manage Users";
}

@{
    User user = null;
    var userName = User.Identity.Name;
    if (Request.IsAuthenticated)
    {
        var id = (FormsIdentity)User.Identity;
        userName = id.Ticket.Name;

    }
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="@Url.Action("EditAddress", "Management", new { id = item.Id })" class="btn btn-primary">Edit Address</a>
            </td>
        </tr>
    }
    </tbody>
</table>
